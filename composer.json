{
	"name": "sortex/ansilog",
	"description": "Monitor and manage a history for centralized Ansible playbook executions",
	"authors": [
		{ "name": "Sortex", "email": "info@sortex.co.il" }
	],
	"config": {
		"bin-dir": "bin"
	},
	"minimum-stability": "dev",
	"require": {
			"php": ">=5.5.0",
			"kohana/core": "3.4.*",
			"kohana/auth": "3.4.*",
			"kohana/cache": "3.4.*",
			"kohana/codebench": "3.4.*",
			"kohana/database": "3.4.*",
			"kohana/image": "3.4.*",
			"kohana/minion": "3.4.*",
			"kohana/orm": "3.4.*",

			"pimple/pimple": "3.0.*",
			"mustache/mustache": "2.7.*",
			"erusev/parsedown": "1.1.*",
			"symfony/yaml": "2.6.*",
			"hipchat/hipchat-php": "1.3.*",
			"raven/raven": "0.10.*"
		},
	"require-dev": {
		"kohana/userguide": "3.4.*",
		"phpspec/phpspec": "2.1.*@dev"
	},
	"extra": {
		"installer-paths": {
			"vendor/{$vendor}/{$name}": ["type:kohana-module"]
		}
	},
	"autoload": {
		"psr-4": {
			"Ansilog\\": "src/Ansilog/classes/"
		},
		"psr-0": {
			"": [
				"src/Kohana/classes/",
				"vendor/kohana/core/classes/",
				"vendor/kohana/cache/classes/",
				"vendor/kohana/database/classes/",
				"vendor/kohana/minion/classes/"
			]
		}
	}
}
