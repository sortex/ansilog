{{< cms/site/layout }}

{{$ grid }}
<div id="grid" class="container-fluid {{page.slug}}">
	<div class="row">
		<nav class="col-md-1 col-md-offset-1">
			{{$ nav}}
			<h1>
				<a class="logo" href="{{ url_base }}">
					{{ site.title }}
				</a>
			</h1>
			<ul>
				<li><a href="{{ url_base }}article/">article</a></li>
				<li><a href="{{ url_base }}archive/">read</a></li>
				<li><a href="{{ url_base }}about/">me</a></li>
			</ul>
			<p>
				&copy; 2014 <a href="{{ url_base }}">Foobar</a>
			</p>
			{{/ nav}}
		</nav>
		<aside class="col-md-1">
			<h3><a href="{{ url_base }}category/">category/</a></h3>
		</aside>
		<section class="col-md-8">
			{{$ content_wrap}}
			<div class="row">
				<aside class="article col-md-6">
					<h2><a href="{{ url_base }}article/">article<span>/</span></a></h2>
					<ul>
						<li><a href="#">Lorem ipsum lorem upsum lorem ipsum</a></li>
						<li><a href="#">Lorem ipsum lorem upsum lorem ipsum</a></li>
					</ul>
				</aside>
				<aside class="project col-md-6">
					<h2><a href="{{ url_base }}foobar/">foobar<span>/</span></a></h2>
					<ul>
						<li><a href="#">Lorem ipsum lorem upsum lorem ipsum</a></li>
						<li><a href="#">Lorem ipsum lorem upsum lorem ipsum</a></li>
						<li><a href="#">Lorem ipsum lorem upsum lorem ipsum</a></li>
						<li><a href="#">Lorem ipsum lorem upsum lorem ipsum</a></li>
					</ul>
				</aside>
			</div>
			<div class="row">
				<article class="col-md-11">
					{{> content}}
				</article>
			</div>
			{{/ content_wrap}}
		</section>
	</div>
</div>
{{/ grid }}

{{/ cms/site/layout }}
